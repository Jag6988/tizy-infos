<div class="formulaire-contact">
  <h3>Contactez nous</h3>

  <div class="formulaire">
    <%= form_for @contact do |f| %>
      <%= f.label :name %> <br>
      <%= f.text_field :name, required: true %>

      <br>

      <%= f.label :email %> <br>
      <%= f.email_field :email, required: true %>

      <br>

      <%= f.label :message %> <br>
      <%= f.text_area :message, as: :text %>

      <div class="hidden">
        <%= f.label :nickname %> <br>
       <%= f.text_field :nickname, hint: 'laisser ce champ vide' %>
      </div>
      <br>

      <%= f.submit 'Envoyer', class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
